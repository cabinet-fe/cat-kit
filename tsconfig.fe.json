{
  "extends": "ts-conf-base/tsconfig.web.json",
  "compilerOptions": {
    "composite": true,
    "types": ["vitest/globals"],
    "declaration": true,
    "noUncheckedIndexedAccess": false
  },
  "include": [
    "./packages/fe/**/*.ts",
    "./packages/fe/*.ts",
    "./packages/crypto/**/*.ts",
    "./packages/crypto/*.ts",
    "./packages/common/**/*.ts",
    "./packages/common/*.ts",
    "./packages/canvas/**/*.ts",
    "./packages/canvas/*.ts"
  ],
  "exclude": ["node_modules"]
}
