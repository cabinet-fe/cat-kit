{
  "extends": "ts-conf-base/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "isolatedDeclarations": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "incremental": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
