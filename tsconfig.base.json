{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true,
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    // "rootDir": ".",
    "skipLibCheck": true,
    "declaration": true,
    "noUnusedLocals": true,
    "importsNotUsedAsValues": "error",
    "types": ["vitest/globals"]
  }
}
