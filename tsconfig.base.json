{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "module": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    // "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "declaration": true,
    "types": ["vitest/globals"]
  }
}
